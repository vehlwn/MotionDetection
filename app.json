{
  "video_capture": {
    "filename": "/dev/video0",
    "file_format": "v4l2",
    "video_size": "1280x720",
    "framerate": "30",
    "input_format": "mjpeg"
  },
  "output_files": {
    "prefix": "videos",
    "extension": ".mp4",
    "video_bitrate": "10M",
    "audio_bitrate": "128k"
  },
  "logging": {
    "app_level": "info",
    "ffmpeg_level": "warning"
  },
  "segmentation": {
    "background_subtractor": {
        "algorithm": "MOG2",
        "history": 500,
        "var_threshold": 16.0,
        "detect_shadows": false
    },
    "min_moving_area": 500,
    "delta_without_motion": 5.0
  },
  "preprocess": {
    "resize": {
      "factor": 0.5
    },
    "smoothing": {
      "algorithm": "normalized_box",
      "kernel_size": 11
    }
  }
}
